@page "/404"
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col">
                We are sorry, but we couldn't find the page you are looking for!!!
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col text-md-center m-5 text-primary">
        <button type="button" class="btn btn-primary" @onclick="NavigateToHome">Back to the Home Page</button>
    </div>
</div>

@code 
{
    [Inject]
    public NavigationManager NavManager { get; set; }
    public void NavigateToHome()
    {
        NavManager.NavigateTo("/");
    }
}
